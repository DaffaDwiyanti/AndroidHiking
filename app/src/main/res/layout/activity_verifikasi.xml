        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/biru"
            android:layout_marginTop="20dp"
            android:text="GUNUNG GEDE"
            />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:visibility="visible"
            android:layout_height="1.5dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/biru"
                android:layout_marginTop="20dp"
                android:text="12 Agustus 2019"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/biru"
                android:layout_marginTop="20dp"
                android:text=" -"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/biru"
                android:layout_marginTop="20dp"
                android:text="15 Agustus 2019"
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/biru"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="219dp"
            android:text="RP350.000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transfer Bank"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/biru"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silahkan Upload bukti pembayaran yang telah dilakukan pada tombol di atas, lalu klik selesai jika sudah mengupload. Verifikasi pembayaran memakan waktu maksimal 2 hari setelah pembayaran dilakukan"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="455dp"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/kuning"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="645dp"
        android:textSize="20sp"
        android:text="SELESAI"
        android:textColor="@color/biru"/>




</RelativeLayout>